<div class="container">
  <p>User: <%= current_user&.name  %></p>
  <p style="color: green"><%= notice %></p>

  <h1>Recipes</h1>

  <div id="recipes">
    <% @recipes.each do |recipe| %>
      <%= render recipe %>
      <p>
        <%= link_to "Show this recipe", recipe, class: 'btn btn-primary btn-sm' %>
      </p>
    <% end %>
  </div>

  <%= link_to "New recipe", new_recipe_path, class: 'btn btn-primary btn-sm' %>
</div>
